<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/worklistLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_workplan_stat"
        android:src="@drawable/star_ratingbar_fource"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_workplan_title"
        android:text="工作计划作计划作计"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/iv_workplan_stat"
        />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/tv_workplan_time"
	    android:text="2014.2.17 16:02:00"
	    android:textSize="14sp"
	    android:textColor="@color/light_gray"
	    android:layout_below="@id/tv_workplan_title"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="10dp"
	    android:layout_alignParentRight="true"/>
</RelativeLayout>
